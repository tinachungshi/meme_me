<h4 class="title_text">profile</h4>
<div class="divider"></div>

<div class="row">
  <div class="col s12">
    <p class="title_text">name: <%= @user.name %></p>
    <p class="title_text">email: <%= @user.email %></p>
    <%= link_to "Edit Profile", edit_user_path(@user), class:"waves-effect waves-light btn-large" %>
  </div>
</div>
<div class="divider"></div>
<br>
<div class="row">
  <% @memes.each do |meme| %>
    <div class="col s4 random">
      <div class="card">
        <div class="card-image z-depth-0">
          <%= image_tag(meme.image)%>
        </div>
        <div class="card-action">
          <p class="category_text"><%= meme.category %></p>
          <p class="memetitle_text"><%= meme.title %></p>
          <%= link_to "show", meme_path(meme) if current_user %>
          <%= link_to "Edit", edit_meme_path(meme), method: :get if current_user %>
          <%= link_to "delete", meme_path(meme), method: :delete, data: { confirm: "Really?" } if current_user %>

        </div>
      </div>
    </div>
  <% end %>
</div>

